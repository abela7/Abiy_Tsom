# ─── Abiy Tsom — Production Environment ─────────────────────────────
# Copy this file to .env on the server, then fill in the real values.
#   cd ~/abiytsom.abuneteklehaymanot.org
#   cp .env.example.production .env
#   php artisan key:generate
# Then edit .env and replace every YOUR_… placeholder.
# ─────────────────────────────────────────────────────────────────────

APP_NAME="Abiy Tsom"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://abiytsom.abuneteklehaymanot.org

APP_LOCALE=am
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ─── Database (fill in from cPanel → MySQL Databases) ───────────────
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=abunetdg_abiy_tsom
DB_USERNAME=abunetdg_AbiyTsom
DB_PASSWORD=YOUR_STRONG_DB_PASSWORD

# ─── Session ────────────────────────────────────────────────────────
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# ─── Services ───────────────────────────────────────────────────────
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=file

# ─── Mail (update if you want real emails) ──────────────────────────
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@abuneteklehaymanot.org"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
